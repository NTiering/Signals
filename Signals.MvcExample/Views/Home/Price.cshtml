@model Signals.MvcExample.Signals.BookPriceSignal

@{
    ViewData["Title"] = "Price";
}

<h1>Price</h1>

<div>
    <h4>Book Price Breakdown</h4>
    <hr />
    <dl class="row">


        <dt class="col-sm-2">
            Book Id
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookId)
        </dd>
        <dt class="col-sm-2">
            Title
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookDetails.Title)
        </dd>
        <dt class="col-sm-2">
            Author
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookDetails.Author)
        </dd>
        <dt class="col-sm-12">
            <hr />
        </dt>

        <dt class="col-sm-2">
            Price
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BookDetails.Price)
        </dd>
        <dt class="col-sm-2">
            Postage Cost
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PostageCost)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Discount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Discount)
        </dd>
        <dt class="col-sm-2">
            <b>Total</b>
        </dt>
        <dd class="col-sm-10">
            <b> @(Model.BookDetails.Price + Model.PostageCost - Model.Discount) </b>
        </dd>

        <dd class="col-sm-12">
            <ul>
                @foreach (var note in Model.Notes)
                {
                    <li>@note</li>
                }
            </ul>
        </dd>

    </dl>
</div>
<div>
    <a asp-action="Index">Back to List</a>
</div>
